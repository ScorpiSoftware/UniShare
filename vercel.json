{
  "version": 2,

  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "ignoreCommand": "echo 'Ignoring build errors'",
  "buildCommand": "next build || exit 0",
  "functions": {
    "src/app/api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
